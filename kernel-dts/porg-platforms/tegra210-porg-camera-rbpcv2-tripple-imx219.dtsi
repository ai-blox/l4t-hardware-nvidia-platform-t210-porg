#include "tegra210-camera-rbpcv2-tripple-imx219.dtsi"

#define CAM0_PWDN		TEGRA_GPIO(S, 7) // CAM0_PWD
#define CAM1_PWDN       TEGRA_GPIO(T, 0) // CAM1_PWD
#define CAM2_PWDN		TEGRA_GPIO(I, 2) // GPIO3
#define CAM3_PWDN       TEGRA_GPIO(H, 7) // GPIO5
#define CAM4_PWDN       TEGRA_GPIO(I, 1) // GPIO4
#define CAM5_PWDN       TEGRA_GPIO(I, 0) // GPIO6
#define CAMERA_I2C_MUX_BUS(x) (0x1E + x)

/ {

    host1x {
		i2c@546c0000 {
		    status = "okay";
            tca9548_70: tca9548@70 {
                status = "okay";
                compatible = "nxp,pca9548";
                reg = <0x70>;
                #address-cells = <1>;
                #size-cells = <0>;
                vcc-supply = <&p3448_vdd_3v3_sys>;
                skip_mux_detect;
                force_bus_start = <CAMERA_I2C_MUX_BUS(0)>;
                i2c@0 {
                    status = "okay";
                    reg = <0>;
                    i2c-mux,deselect-on-exit;
                    #address-cells = <1>;
                    #size-cells = <0>;
                    rbpcv2_imx219_a@10 {
                        status = "okay";
                        reset-gpios = <&gpio CAM0_PWDN GPIO_ACTIVE_HIGH>;
                    };
                };
                i2c@2 {
                    status = "okay";
                    reg = <2>;
                    i2c-mux,deselect-on-exit;
                    #address-cells = <1>;
                    #size-cells = <0>;
                    rbpcv2_imx219_e@10 {
                        status = "okay";
                        reset-gpios = <&gpio CAM2_PWDN GPIO_ACTIVE_HIGH>;
                    };
                };
                i2c@4 {
                    status = "okay";
                    reg = <4>;
                    i2c-mux,deselect-on-exit;
                    #address-cells = <1>;
                    #size-cells = <0>;
                    rbpcv2_imx219_c@10 {
                        status = "okay";
                        reset-gpios = <&gpio CAM4_PWDN GPIO_ACTIVE_HIGH>;
                    };
                };
            };
        };
    };

	gpio@6000d000 {
	    status = "okay";
		camera-control-output-low {
		    status = "okay";
			gpio-hog;
			output-low;
			gpios = <CAM0_PWDN 0 CAM2_PWDN 0 CAM4_PWDN 0>;
			label = "cam0-pwdn", "cam2-pwdn", "cam4-pwdn";
		};
	};
};
